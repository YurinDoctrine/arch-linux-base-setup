{
  "audio": "pipewire",
  "bootloader": "grub-install",
  "debug": false,
  "gfx_driver": "All open-source (default)",
  "harddrives": [
    "/dev/sda"
  ],
  "hostname": "doctrine",
  "kernels": [
    "linux"
  ],
  "keyboard-layout": "us",
  "mirror-region": "Worldwide",
  "nic": {
    "NetworkManager": true,
    "nic": "Use NetworkManager (necessary to configure internet grahically in GNOME and KDE)"
  },
  "ntp": true,
  "packages": [
    "arch-install-scripts",
    "bash",
    "binutils",
    "ccache",
    "chromium",
    "coreutils",
    "fakeroot",
    "meson",
    "nano",
    "ninja",
    "procs",
    "zlib",
    "zstd",
    "wget",
    "xdg-utils"
  ],
  "profile": "gnome",
  "script": "guided",
  "services": [],
  "swap": true,
  "sys-encoding": "utf-8",
  "sys-language": "en_GB",
  "timezone": "Europe/Moscow",
  "version": "2.3.2",
  "custom-commands": [
    "cd /etc/skel; git clone https://github.com/YurinDoctrine/.config.git"
  ]
}
